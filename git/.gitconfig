  name = Marcelo F Andrade
  email = mfandrade@gmail.com
  signingkey = 608DE262EFB14FE3

[commit]
  gpgSign = false

[core]
  editor = vim

[diff]
  external = difft --display side-by-side --syntax-highlight off

[alias]
  # ----------------------------------------
  br = branch
  bra = branch --all
  brd = branch --delete
  brD = branch -D
  brm = branch --move
  bru = branch --set-upstream-to

  # ----------------------------------------
  uncommit = reset --soft HEAD~1
  com = commit
  comm = commit --message
  comra = commit --reset-author
  addcom = commit --all
  addcom = commit -am
  ; addcomm = "!f() { git commit \"$1\" --message \"$2\"; }; f"
  am = commit --amend
  amend = commit --amend
  amm = commit --amend --message
  amne = commit --amend --no-edit

  # ----------------------------------------
  s = status
  ss = status --ignored=matching --untracked-files=all
  st = status --short

  # ----------------------------------------
  co = checkout
  cob = checkout -b
  discard = checkout
  discard-all = checkout .

  # ----------------------------------------
  d = diff
  cached = diff --cached --stat
  staged = diff --staged

  # ----------------------------------------
  unadd = restore --staged
  stage = add
  unstage = restore --staged
  patch = add --patch

  # ----------------------------------------
  hist = log --pretty=format:\"%C(yellow)%h%C(reset)%C(magenta)%d %C(white)%s %C(blue)[%al]  %C(auto)%ar%C(reset)\" --ext-diff
  last = log --pretty=format:\"%C(yellow)%h%C(reset)%C(magenta)%d %C(white)%s %C(blue)[%al]  %C(auto)%ar%C(reset)\" --ext-diff -1 --stat
  ls = log --pretty=format:\"%h | %as | %al | %s%d\" --ext-diff

  # ----------------------------------------
  r = remote
  rv = remote --verbose
  rls = remote --verbose
  rem = remote --verbose
  radd = remote add
  rdel = remote rm
	addcomm = "!f() { if [ -z \"$1\" ] || [ -z \"$2\" ]; then echo \"error: you need to inform file path and commit message\"; return 1; fi; git add '$1' && git commit -m '$2'; }; f"

[pull]
  rebase = true

[include]
  path = ~/.gitconfig.extra
